params {
   config_profile_name        = 'Test profile'
   config_profile_description = 'Minimal test dataset to check pipeline function'

   max_cpus   = 4
   max_memory = '8.GB'
   max_time   = '1.h'

   // genome
   genome = "GRCh38"
    
   // sentieon
   sentieon_ml_model = "s3://elembio-macro-data/sentieon/DNAscopeElementBioWGS2.0.bundle"

   // parabricks
   known_sites = []

   // input
   input = "${baseDir}/tests/csv/small_fastq.csv"

   // output
   outdir                     = './results/'

}

process {
    withName: SENTIEON_CLI  {
        cpus = 6
        memory = 12.GB
        time = 1.h
        maxRetries = 3
    }
}

cleanup = false

aws {
   batch {
      cliPath = '/home/ec2-user/miniconda/bin/aws'
      maxParallelTransfers = 10
      maxTransferAttempts = 3
   }
   client {
      maxConnections = 10
      uploadMaxThreads = 10
      maxErrorRetry = 3
      socketTimeout = 3600000
      uploadRetrySleep = 1000
      uploadChunkSize = 32.MB
   }
}
